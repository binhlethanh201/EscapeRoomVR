<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Color-Coded Door Lock</title>
    <style>
        body {
            background-color: #1d1007;
            color: #ffffff;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            text-align: center;
            background-color: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 10px;
        }
        .back-button {
            position: absolute;
            left: 20px;
            top: 20px;
        }
        .back-button button {
            background-color: #3a1f0e;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
        }
        .back-button button:hover {
            background-color: #5a2f1e;
        }
        .display {
            font-size: 24px;
            margin-bottom: 20px;
            background-color: #2a1a0f;
            padding: 10px;
            border-radius: 5px;
            min-height: 30px;
        }
        .keypad {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
            max-width: 300px;
            margin: 0 auto;
        }
        button {
            background-color: #3a1f0e;
            color: white;
            border: none;
            padding: 15px;
            font-size: 18px;
            cursor: pointer;
            border-radius: 5px;
        }
        button:hover {
            background-color: #5a2f1e;
        }
        .action-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }
        .feedback {
            margin-top: 20px;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <div class="back-button">
        <button onclick="window.location.href='http://localhost:8080/room2'">Back to Room 2</button>
    </div>
    <div class="container">
        <h2>Enter Door Code</h2>
        <div class="display" id="display"></div>
        <div class="keypad">
            <button onclick="addNumber(1)">1</button>
            <button onclick="addNumber(2)">2</button>
            <button onclick="addNumber(3)">3</button>
            <button onclick="addNumber(4)">4</button>
            <button onclick="addNumber(5)">5</button>
            <button onclick="addNumber(6)">6</button>
            <button onclick="addNumber(7)">7</button>
            <button onclick="addNumber(8)">8</button>
            <button onclick="addNumber(9)">9</button>
            <button onclick="backspace()">Back</button>
            <button onclick="addNumber(0)">0</button>
            <button onclick="clearCode()">Clear</button>
        </div>
        <div class="action-buttons">
            <button onclick="checkCode()">Submit</button>
        </div>
        <div class="feedback" id="feedback"></div>
    </div>

    <script>
        let code = [];
        const correctCode = [1, 7, 6]; // Hard-coded for testing, should be replaced dynamically if needed

        function addNumber(num) {
            if (code.length < 3) {
                code.push(num);
                updateDisplay();
            }
        }

        function backspace() {
            code.pop();
            updateDisplay();
        }

        function clearCode() {
            code = [];
            updateDisplay();
            document.getElementById('feedback').textContent = '';
        }

        function updateDisplay() {
            const display = document.getElementById('display');
            let displayText = '';
            for (let i = 0; i < 3; i++) {
                displayText += code[i] !== undefined ? code[i] : '_';
                if (i < 2) displayText += ' ';
            }
            display.textContent = displayText;
        }

        function checkCode() {
            const feedback = document.getElementById('feedback');
            if (code.length !== 3) {
                feedback.textContent = 'Please enter exactly 3 digits.';
                return;
            }

            const isCorrect = code.every((num, index) => num === correctCode[index]);
            if (isCorrect) {
                feedback.textContent = 'Code correct! Redirecting...';
                setTimeout(() => {
                    window.location.href = 'http://localhost:8080';
                }, 1000);
            } else {
                feedback.textContent = 'Incorrect code. Try again.';
                code = [];
                updateDisplay();
            }
        }
        console.log(correctCode);
    </script>
</body>
</html>