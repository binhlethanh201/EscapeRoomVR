<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Play now!</title>
  <style>
    * {
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, sans-serif;
    }

    body {
      margin: 0;
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      background-image: url('/image/start_background.jpg');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }

    h1 {
      color: #ffffff;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .button-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 12px;
      margin-top: 300px;
    }

    button {
      background-color: #7a2105;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      color: #ffffff;
      padding: 12px 24px;
      cursor: pointer;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
      transition: background-color 0.3s ease, transform 0.2s ease;
    }

    button:hover {
      background-color: #5f1a04;
      transform: scale(1.02);
    }

   
  .avatar-dropdown {
      position: absolute;
      top: 20px;
      right: 20px;
      z-index: 100;
    }

    .avatar-wrapper {
      position: relative;
    }

    .avatar-img {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      border: 2px solid #fff;
      cursor: pointer;
      transition: transform 0.2s ease;
    }

    .avatar-img:hover {
      transform: scale(1.1);
    }

    .dropdown-menu {
      display: none;
      position: absolute;
      top: 60px;
      right: 0;
      background-color: #764a4a; 
      border-radius: 10px;
      min-width: 200px;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.2);
      overflow: hidden;
      animation: fadeIn 0.2s ease-in-out;
    }

    .dropdown-header {
      padding: 12px 16px;
      background-color: #764a4a;
      border-bottom: 1px solid #eee;
      font-size: 16px;
      color: #ffffff; 
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .dropdown-header::before {
      content: "üë§";
    }

    .dropdown-menu form {
      margin: 0;
    }

    .dropdown-menu button {
  width: 100%;
  padding: 12px;
  border: none;
  background-color: #7a2105; 
  color: #ffffff;            
  font-weight: bold;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.2s ease, opacity 0.2s ease;
}

.dropdown-menu button:hover {
  background-color: #5f1a04; 
  opacity: 0.95;
}


    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(-5px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

  </style>
</head>

<body>
  <div class="button-container">
    <button onclick="redirectToLink()">Play now!</button>
    <button>Continuous</button>
    <button>Setting</button>
  </div>

 <!-- Avatar Dropdown -->
  <div class="avatar-dropdown">
    <div class="avatar-wrapper">
      <img src="https://www.w3schools.com/howto/img_avatar.png" alt="Avatar" id="avatarIcon" class="avatar-img">

      <div id="dropdownMenu" class="dropdown-menu">
        <div class="dropdown-header">
          Xin ch√†o
        </div>
        <form action="/logout" method="POST">
          <button type="submit">ƒêƒÉng xu·∫•t</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    //redirect to link
    function redirectToLink() {
      window.location.href = "http://localhost:8080";
    }
    
    //drop down icon
    const avatarIcon = document.getElementById("avatarIcon");
    const dropdownMenu = document.getElementById("dropdownMenu");
    avatarIcon.addEventListener("click", () => {
      dropdownMenu.style.display = dropdownMenu.style.display === "block" ? "none" : "block";
    });
    window.addEventListener("click", function (e) {
      if (!avatarIcon.contains(e.target) && !dropdownMenu.contains(e.target)) {
        dropdownMenu.style.display = "none";
      }
    });

    // Auto logout
    const expires = {{#if expiresInMs}}{{expiresInMs}}{{else}}10800000{{/if}};
    setTimeout(() => {
      window.location.href = "/";
    }, expires);
  </script>
</body>
</html>
